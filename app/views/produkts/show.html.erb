<p style="color: green"><%= notice %></p>
<div class="card" style="margin: 20px 20px 10px; height: 100%;">
  <div class="card-body d-flex flex-column">
    <!-- Bootstrap Row -->
    <div class="row align-items-start flex-grow-1">
      <!-- Image on the Left -->
      <div class="col-md-4">
        <img
          class="card-img-top"
          style="max-width: 100%; max-height: 500px;"
          src="<%= @produkt.obrazek %>"
          alt="neni obrazek"
          onerror="this.onerror=null; this.src='/repinek.png';"
        >
      </div>

      <!-- Content on the Right -->
      <div class="col-md-8 d-flex flex-column" style="display: flex; flex-direction: column ">
        <h4 class="mb-3"><%= @produkt.nazev %></h4>
        <p class="mb-3"><%= @produkt.popis %></p>
        <p>Cena dopravy je 79kc, balicek se posila po dokonceni platby</p>
        <p class="mb-3"><strong>Cena:</strong> <%= @produkt.cena %> Kč</p>
        <p class="<%= @produkt.pocet > 0 ? 'text-success' : 'text-dark' %>">
          <strong>Skladem:</strong> <%= @produkt.pocet %> kusu
        </p>
        <%if @produkt.pocet>0 %>
          <div class="mb-3">
            <%= link_to "Koupit", purchase_produkt_path(@produkt), class: "btn btn-success" %>

          </div>
        <% end %>
        <%if user_signed_in? %>
        <div class="mb-3">
          <%= link_to "Upravit produkt", edit_produkt_path(@produkt), class: "btn btn-warning" %>
        </div>
        <% end %>

        <div class="mt-auto">
          <%= link_to "Zpátky na produkty", produkts_path, class: "btn btn-outline-secondary" %>
        </div>
      </div>
    </div>
  </div>
</div>


