<%= form_with(model: produkt) do |form| %>
  <% if produkt.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(produkt.errors.count, "error") %> prohibited this produkt from being saved:</h2>

      <ul>
        <% produkt.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div>
    <%= form.label :nazev, style: "display: block" %>
    <%= form.text_area :nazev %>
  </div>
