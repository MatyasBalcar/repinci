    <%= form.label :cena, style: "display: block" %>
    <%= form.number_field :cena %>
  </div>

  <div class="mb-3">
    <%= form.label :obrazek, "Nahrát obrázek" %>
    <%= form.file_field :obrazek, class: "form-control" %>
  </div>

  <div>
    <%= form.label :popis, style: "display: block" %>
    <%= form.text_area :popis %>
  </div>

  <div>
    <%= form.label :velikost, style: "display: block" %>
    <%= form.text_field :velikost %>
  </div>

  <div>
    <%= form.label :barva, style: "display: block" %>
    <%= form.text_field :barva %>
  </div>
  <div>
    <%= form.label :pocet, style: "display: block" %>
    <%= form.text_field :pocet %>
  </div>

  <div>
    <%= form.submit class:"btn btn-success"%>
  </div>
